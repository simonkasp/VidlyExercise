@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (Model.Count == 0)
    {
        <p>There are no movies for preview</p>
    }
    else
    {
        <h2>Movies</h2>

        @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary"})

        <table id="movies" class="table table-active">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @{ 
                    foreach (var movie in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id},  null)</td>
                            <td>@movie.Genre.Name</td>
                            <td>
                                <button class="btn-link js-delete" data-movie-id=@movie.Id>Delete</button>
                            </td>
                        </tr>
                    }
                }
                </tbody>
        </table>
    }
}

@section scripts
{
    <script>

        var table = $("#movies").DataTable();

        $(document).ready(function () {
            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + button.atr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove.draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}



