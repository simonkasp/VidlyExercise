@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{

 
        <h2>Movies</h2>

        <table id="movies" class="table table-active">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
  
}

@section scripts
{
    <script>
        var table = $("#movies").DataTable({
            ajax: {
                url: "api/movies",
                dataSrc: ""
            },
            columns: [
                {
                    data: "name",

                },
                {
                    data: "genre.name"
                }
            ]
        });

    </script>
}



